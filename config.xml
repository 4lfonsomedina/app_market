<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.app_markets" version="1.0"
    xmlns="http://www.w3.org/ns/widgets" 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>APPMARKET</name>
    <description>
        APPMARKET
    </description>
    <author email="sistemas@ferbis.com" href="http://ferbis.com">
        Ing. Alfonso Medina Duran
    </author>
    <content src="index.html" />
    <preference name="Orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="22" />
    <preference name="android-targetSdkVersion" value="29" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#C7C7C7" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="StatusBarDefaultScrollToTop" value="false" />
    <preference name="SplashScreen" value="none" />
    <preference name="scheme" value="app" />
    <preference name="hostname" value="localhost" />
    <preference name="deployment-target" value="11.0" />
    <plugin name="cordova-plugin-file" source="npm" spec="~4.3.3" value="Necesario para guardar la sesión del cliente" />
    <plugin name="cordova-plugin-network-information" source="npm" spec="~1.3.3" value="Necesario para consultar catalogo de productos" />
    <plugin name="cordova-plugin-statusbar" source="npm" spec="~2.4.3" value="Necesario para cambiar color de la barra" />
    
    <plugin name="cordova-plugin-whitelist" spec="~1.3.4" />
    <plugin name="cordova-plugin-cleartext" source="npm" spec="~1.0.0" value="Necesario para cambiar color de la barra"/>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="www/img/icon/ios/icon.png" />
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <edit-config file="*-Info.plist" mode="overwrite" target="NSLocationAlwaysUsageDescription">
            <string>La Aplicación necesita permiso de ubicación para envio de pedido de compra.</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="overwrite" target="NSLocationWhenInUseUsageDescription">
            <string>La Aplicación necesita permiso de ubicacion para envio de pedido de compra.</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="overwrite" target="NSPhotoLibraryUsageDescription">
            <string>La Aplicación necesita permiso de memoria para almacenar datos de sesión.</string>
        </edit-config>
        <icon height="57" src="www/img/icon/ios/icon.png" width="57" />
        <icon height="144" src="www/img/icon/ios/icon-72@2x.png" width="144" />
        <icon height="72" src="www/img/icon/ios/icon-72.png" width="72" />
        <icon height="50" src="www/img/icon/ios/icon-small-50.png" width="50" />
        <icon height="100" src="www/img/icon/ios/icon-small-50@2x.png" width="100" />
        <icon height="60" src="www/img/icon/ios/icon-60.png" width="60" />
        <icon height="120" src="www/img/icon/ios/icon-60@2x.png" width="120" />
        <icon height="180" src="www/img/icon/ios/icon-60@3x.png" width="180" />
        <icon height="76" src="www/img/icon/ios/icon-76.png" width="76" />
        <icon height="152" src="www/img/icon/ios/icon-76@2x.png" width="152" />
        <icon height="29" src="www/img/icon/ios/icon-small.png" width="29" />
        <icon height="58" src="www/img/icon/ios/icon-small@2x.png" width="58" />
        <icon height="87" src="www/img/icon/ios/icon-small@3x.png" width="87" />
        <icon height="40" src="www/img/icon/ios/icon-small-40.png" width="40" />
        <icon height="80" src="www/img/icon/ios/icon-small-40@2x.png" width="80" />
        <icon height="167" src="www/img/icon/ios/icon-167.png" width="167" />
        <icon height="1024" src="www/img/icon/ios/icon-1024.png" width="1024" />
        <splash height="2208" src="www/img/screen/ios/Default@3x~iphone~comany.png" width="1242" />
        <splash height="1334" src="www/img/screen/ios/Default@2x~iphone~comany.png" width="750" />
    </platform>
    <platform name="android">
        <resource-file src="network_security_config.xml" target="app/src/main/res/xml/network_security_config.xml" />


        <icon density="ldpi" src="www/img/icon/android/ldpi.png" />
        <icon density="mdpi" src="www/img/icon/android/mdpi.png" />
        <icon density="hdpi" src="www/img/icon/android/hdpi.png" />
        <icon density="xhdpi" src="www/img/icon/android/xhdpi.png" />
        <icon density="xxhdpi" src="www/img/icon/android/xxhdpi.png" />
        <icon density="xxxhdpi" src="www/img/icon/android/xxxhdpi.png" />
        <splash qualifier="land-mdpi" src="www/img/screen/android/splash-port-mdpi.png" />
        <splash qualifier="land-hdpi" src="www/img/screen/android/splash-port-hdpi.png" />
        <splash qualifier="land-xhdpi" src="www/img/screen/android/splash-port-xhdpi.png" />
        <splash qualifier="land-xxhdpi" src="www/img/screen/android/splash-port-xxhdpi.png" />
        <splash qualifier="land-xxxhdpi" src="www/img/screen/android/splash-port-xxxhdpi.png" />
    </platform>
</widget>
